<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_small"
    app:cardCornerRadius="@dimen/corner_zero"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/space_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_quote_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_quote_text"
            android:layout_alignBottom="@id/item_quote_author"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_quote_text"
            style="@style/TextAppearance.AppCompat.Quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/item_quote_author"
            style="@style/TextAppearance.AppCompat.Author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_quote_text"
            android:layout_marginTop="8dp"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            tools:text="@tools:sample/full_names" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
